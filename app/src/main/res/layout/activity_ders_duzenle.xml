<?xml version="1.0" encoding="utf-8"?>

    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="357dp"
        android:layout_height="580dp"
        android:layout_margin="30dp"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="14dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="570dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="300dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.964">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="362dp"
                android:layout_height="581dp">

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="78dp"
                    android:layout_height="73dp"
                    android:layout_marginStart="141dp"
                    android:layout_marginEnd="147dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.312"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.083"
                    app:srcCompat="@drawable/add" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="153dp"
                    android:layout_height="29dp"
                    android:layout_marginStart="105dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="103dp"
                    android:layout_marginBottom="11dp"
                    android:text="Dersi Düzenle"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/imageView7"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/dersAdi1"
                    android:layout_width="305dp"
                    android:layout_height="49dp"
                    android:text="Ders Adı"
                    android:textColor="#625A83"
                    app:layout_constraintBottom_toTopOf="@+id/guncelleBtn"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.508"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/textView8"
                    app:layout_constraintVertical_bias="0.258"
                    tools:ignore="SpeakableTextPresentCheck"></EditText>

                <EditText
                    android:id="@+id/dersKodu1"
                    android:layout_width="305dp"
                    android:layout_height="49dp"
                    android:text="Ders Kodu"
                    android:textColor="#625A83"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.511"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView7"
                    app:layout_constraintVertical_bias="0.154"
                    tools:ignore="SpeakableTextPresentCheck"></EditText>

                <EditText
                    android:id="@+id/stdSayisi1"
                    android:layout_width="305dp"
                    android:layout_height="49dp"
                    android:text="Öğrenci Sayısı"
                    android:textColor="#625A83"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.508"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView7"
                    app:layout_constraintVertical_bias="0.297"
                    tools:ignore="SpeakableTextPresentCheck">

                </EditText>

                <EditText
                    android:id="@+id/ogrGorevlisi1"
                    android:layout_width="305dp"
                    android:layout_height="49dp"
                    android:text="Dersi Verecek Öğretim Görevlisi"
                    android:textColor="#625A83"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.508"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView7"
                    app:layout_constraintVertical_bias="0.434"
                    tools:ignore="SpeakableTextPresentCheck">

                </EditText>

                <EditText
                    android:id="@+id/textViewYil1"
                    android:layout_width="132dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="33dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="14dp"
                    android:text="Dönem"
                    android:textColor="#625A83"
                    android:textSize="18dp"
                    app:layout_constraintBottom_toTopOf="@+id/dersGrubu1"
                    app:layout_constraintEnd_toStartOf="@+id/textViewGun1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ogrGorevlisi1" />

                <EditText
                    android:id="@+id/dersGrubu1"
                    android:layout_width="134dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="48dp"
                    android:text="Ders Grubu"
                    android:textColor="#625A83"
                    android:textSize="18dp"
                    app:layout_constraintBottom_toTopOf="@+id/guncelleBtn"
                    app:layout_constraintEnd_toStartOf="@+id/tamamlanmaDurumu"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textViewYil1" />

                <EditText
                    android:id="@+id/textViewGun1"
                    android:layout_width="158dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="28dp"
                    android:layout_marginBottom="14dp"
                    android:text="Tarih (gün)"
                    android:textColor="#625A83"
                    android:textSize="18dp"
                    app:layout_constraintBottom_toTopOf="@+id/tamamlanmaDurumu"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/textViewYil1"
                    app:layout_constraintTop_toBottomOf="@+id/ogrGorevlisi1" />

                <Button
                    android:id="@+id/guncelleBtn"
                    android:layout_width="108dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="127dp"
                    android:layout_marginEnd="127dp"
                    android:layout_marginBottom="36dp"
                    android:text="Güncelle"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent" />

                <CheckBox
                    android:id="@+id/tamamlanmaDurumu"
                    android:layout_width="121dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="28dp"
                    android:layout_marginBottom="48dp"
                    android:text="Tamamlandı"
                    android:textColor="#625A83"
                    app:layout_constraintBottom_toTopOf="@+id/guncelleBtn"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/dersGrubu1"
                    app:layout_constraintTop_toBottomOf="@+id/textViewGun1" />

                <ImageButton
                    android:id="@+id/kapatBtn"
                    android:layout_width="40dp"
                    android:layout_height="39dp"
                    android:layout_marginStart="31dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="64dp"
                    android:background="@color/transparent"
                    android:src="@drawable/carpi_32"
                    app:layout_constraintBottom_toTopOf="@+id/dersAdi1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/textView8"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>