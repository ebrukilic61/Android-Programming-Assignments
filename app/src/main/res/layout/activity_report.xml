<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="380dp"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/white"
    app:contentPadding="2dp"
    tools:context=".ReportList">

    <RelativeLayout
        android:layout_width="380dp"
        android:layout_height="283dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/loadcomment"
            android:layout_width="53dp"
            android:layout_height="48dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/user_icon" />

        <TextView
            android:id="@+id/commentname"
            android:layout_width="327dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_toRightOf="@id/loadcomment"
            android:padding="10dp"
            android:text="Ä°sim Soyisim"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/commenttext"
            android:layout_width="324dp"
            android:layout_height="141dp"
            android:layout_below="@id/commentname"
            android:layout_marginStart="-2dp"
            android:layout_marginLeft="-2dp"
            android:layout_marginTop="40dp"
            android:layout_toEndOf="@id/loadcomment"
            android:layout_toRightOf="@id/loadcomment"
            android:text="Actual Comment"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/commenttime"
            android:layout_width="246dp"
            android:layout_height="43dp"
            android:layout_below="@id/commenttext"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="9dp"
            android:layout_toEndOf="@id/loadcomment"
            android:layout_toRightOf="@id/loadcomment"
            android:text="12/06/19" />

        <TextView
            android:id="@+id/reportSubject"
            android:layout_width="322dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="55dp"
            android:layout_marginTop="50dp"
            android:padding="5dp"
            android:text="Rapor Konusu" />

        <ImageButton
            android:id="@+id/deleteReport"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginStart="320dp"
            android:layout_marginTop="225dp"
            android:background="@color/transparent"
            app:srcCompat="@android:drawable/ic_menu_delete"
            tools:ignore="SpeakableTextPresentCheck" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>